{
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.workingDirectories": [{ "mode": "auto" }], // Auto-detect ESLint configs
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.format.enable": true,
    "eslint.options": {
        "overrideConfigFile": ".eslintrc" // Explicitly set your ESLint config file if needed
    },
    "eslint.nodeEnv": "node"
}
